<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title><%=data.kingdomName%></title>
  </head>
  <body>
    <h1><%=data.kingdomName%></h1>
    <h4><%=getDistrictName(data.District)%></h4>
    <h4>totalSoldier: <%=data.Soldiers.length%> pasukan</h4>
    <br><br>
    <h1>Add Soldier</h1>
    <form action="/soldiers/<%=data.id%>" method="POST">
      Name:<br>
      <input type="text" name="name">
      <br>
      Attack:<br>
      <input type="number" name="attack">
      <br><br>
      <input type="submit" value="Add Soldier">
    </form>
    <br><br>
    <h1>Get District</h1>
    <form action="/kingdoms/<%=data.id%>", method="POST">
      <%districts.forEach(function(district) {%>
        <input type="radio" name="DistrictId" value="<%=district.id%>"><%=district.districtName%><br>
      <%})%>
      <input type="submit" value="Get District">
    </form>
  </body>
</html>