<!DOCTYPE html>
<html>
    <head>
        <title>Kingdom</title>
        <%- include('./partials/navbarStyle.ejs') %>
    </head>
    <header>
        <%- include('./partials/navbar.ejs') %>
    </header>
    <body>
        <h2><%= kingdom.kingdomName %></h2>
        <h3><%= districtName %></h3>
        <h4>Total Soldier: <%= kingdom.Soldiers.length %> Pasukan</h4>
        <br><br>
        <h2>Add Soldier</h2>
        <form method = "POST" action ="/soldiers/<%= kingdom.id%>" >
            Name:<br>
            <input type="text" name="name" >
            <br>
            Attack:<br>
            <input type="text" name="attack" >
            <br><br>
            <input type="submit" value="Submit" href="/soldiers/<%= kingdom.id%>">
        </form> 

        <form  action = "/kingdoms/<%= kingdom.id%>" method = "POST">
            <% district.forEach((district) => {
                if (kingdom.District === district.districtName) {%>
                    <input type="radio" name= "name" value="<%= district.districtName %>" checked> <%= district.districtName %><br>
                <%} else {%>
                    <input type="radio" name= "name" value="<%= district.districtName %>"> <%= district.districtName %><br>
                <%}})%>

                <% if (kingdom.District !== "Unassign") {%>
                <input type="submit" value="Submit" href= "/kingdoms/<%= kingdom.id%>">
                <%}%>
        </form> 
    </body>
</html>