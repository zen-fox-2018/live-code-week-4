<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <style>
    /* Remove the navbar's default margin-bottom and rounded borders */ 
    .navbar {
      margin-bottom: 0;
      border-radius: 0;
    }
    
    /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
    .row.content {height: 450px}
    
    /* Set gray background color and 100% height */
    .sidenav {
      padding-top: 20px;
      background-color: #f1f1f1;
      height: 100%;
    }
    
    /* Set black background color, white text and some padding */
    footer {
      background-color: #555;
      color: white;
      padding: 15px;
    }
    
    /* On small screens, set height to 'auto' for sidenav and grid */
    @media screen and (max-width: 767px) {
      .sidenav {
        height: auto;
        padding: 15px;
      }
      .row.content {height:auto;} 
    }
  </style>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="/">Zen Fox</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><a href="/kingdoms">Kingdom</a></li>
        <li><a href="#">List Kingdom</a></li>
       
      </ul>
  
    </div>
  </div>
</nav>
  
<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav">
     
    </div>

    <div class="col-sm-8 text-left"> 
      <br><br> <br> <br>
      <%= info %>
      <%= err %>
      <table border="3">
       <tr>
            <td>
               <%= Kingdom.kingdomName %>
               <br>
               <%- checkDistrict(Kingdom.District)%>
               <br>
               <%= Kingdom.getTotalPasukan() %>
            </td>
            <td>
                <form action="/soldiers/<%= Kingdom.id%>" method="POST">
                    <table>
                        <tr>
                            <th>Name: </th>
                            <th>Attack:</th>
                        </tr>
                        <tr>
                            <td><input type="text" name="name" placeholder="Soldier Name"></td>
                            <td><input type="text" name="attack" placeholder="Soldier Attack"></td>
                            <tr>
                                <td><button type="submit">Add Soldier</button></td>
                            </tr>
                        </tr>
                    </table>
                </form>
            </td>
            <td>
                <form action="/kingdoms/<%= Kingdom.id %>">
                    <% Districts.forEach( dataDistrict => { %>
                        <input type="radio" name="DistrictId" id="<%= dataDistrict.id %>"  value="<%= dataDistrict.id %> "  > <%= dataDistrict.districtName %>  <br>
                    <% }) %>
                    <button type="submit">Get District</button>
                </form>
            </td>
       </tr>
      </table>
    </div>


    <div class="col-sm-2 sidenav">
     
    </div>
  </div>
</div>

<footer class="container-fluid text-center">
  <p>Zen Fox</p>
</footer>

</body>
</html>
